<?xml version="1.0" encoding="utf-8"?>
<x:description
	stylesheet="CalendarHelperSample.xslt"
	xslt-version="1.0"
	xmlns:x="http://www.jenitennison.com/xslt/xspec"
>

	<x:scenario label="when calling BuildCalendar">
		<x:call template="BuildCalendar" />

		<x:scenario label="with no parameters">
			<x:expect label="it should produce a calendar for the current month (June 2012 in testing)">
				<table>
					<caption>...</caption>
					<thead>
						<tr>
							<th>Man</th>
							<th>...</th>
							<th>...</th>
							<th>...</th>
							<th>...</th>
							<th>...</th>
							<th>...</th>
						</tr>
					</thead>
					<tbody>
						<tr>
							<td class="empty">...</td>
							<td class="empty">...</td>
							<td class="empty">...</td>
							<td class="empty">...</td>
							<td class="today">1</td>
							<td>2</td>
							<td>3</td>
						</tr>
						<tr>...</tr>
						<tr>...</tr>
						<tr>...</tr>
						<tr>
							<td>25</td>
							<td>26</td>
							<td>27</td>
							<td>28</td>
							<td>29</td>
							<td>30</td>
							<td class="empty">...</td>
						</tr>
					</tbody>
				</table>
			</x:expect>
		</x:scenario>

		<x:scenario label="with the date 10th of July 2012">
			<x:call template="BuildCalendar">
				<x:param name="date" select="'2012-07-10'" />
			</x:call>
			<x:expect label="it should build a calendar for July 2012">
				<table>
					<caption>Juli 2012</caption>
					<thead>...</thead>
					<tbody>...</tbody>
				</table>
			</x:expect>
			<x:expect label="it should not select the 1st (i.e., using the date of 'current date' â€” issue #12)" test="not(//td[@class = 'today'][text() = '1'])" />
		</x:scenario>

	</x:scenario>

</x:description>