<?xml version="1.0" encoding="utf-8"?>
<x:description
	stylesheet="../_NavigationHelper.xslt"
	xslt-version="1.0"
	xmlns:x="http://www.jenitennison.com/xslt/xspec"
>

	<x:param name="currentPage" select="document('fixtures/simple-site.xml', /)/Website//Textpage[@id = 1201]" />
	<x:param name="currentSection" select="document('fixtures/simple-site.xml', /)/Website/Textpage[@id = 1200]" />
	<x:param name="mode" select="'subnav'" />

	<x:scenario label="when processing the simple-site fixture with currentPage as 'Page A1'">
		<x:context href="fixtures/simple-site.xml" />
		<x:expect label="it should generate the subnav and set class=selected on Page A1">
			<li class="selected"><a href="...">Page A1</a></li>
			<li><a href="...">Page A2</a></li>
			<li><a href="...">Page A3</a></li>
		</x:expect>
	</x:scenario>
	
</x:description>
