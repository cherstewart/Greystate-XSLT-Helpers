	stylesheet="../_NavigationHelper.xslt"
	xslt-version="1.0"
	xmlns:x="http://www.jenitennison.com/xslt/xspec"
>

	<x:scenario label="processing in 'subnav' mode">
		<x:call template="Navigation">
			<x:param name="mode" select="'subnav'" />
		</x:call>
	
		<x:scenario label="when processing the simple-site fixture with currentPage='Page A'">
			<x:call>
				<x:param name="context" select="document('fixtures/simple-site.xml', /)/Website/Textpage[1]" />			
			</x:call>
			<x:expect label="it should generate the subnav">
				<li><a href="...">Page A1</a></li>
				<li><a href="...">Page A2</a></li>
				<li><a href="...">Page A3</a></li>
			</x:expect>
		</x:scenario>

	</x:scenario>
	
